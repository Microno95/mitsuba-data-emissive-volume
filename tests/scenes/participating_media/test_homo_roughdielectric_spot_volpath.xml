            <float name="alpha" value="0.3"/>
            <string name="int_ior" value="bk7"/>
            <string name="ext_ior" value="air"/>
        </bsdf>
        <ref id="medium1" name="interior"/>
    </shape>

    <shape type="obj">
        <string name="filename" value="meshes/sphere_base.obj"/>
        <bsdf type="roughdielectric">
            <float name="alpha" value="0.3"/>
            <string name="int_ior" value="bk7"/>
            <string name="ext_ior" value="air"/>
        </bsdf>
        <ref id="medium1" name="interior"/>
